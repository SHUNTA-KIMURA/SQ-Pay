<h1>カート内の商品の確認画面</h1>
<div class="container">
  <table class="final_check">
    <tr>
      <th>商品名</th>
      <th>値段</th>
      <th>個数</th>
      <th>合計</th>
    </tr>
    <% @purchases.each do |purchase|%>
    <tr>
      　<td><%= purchase[:name] %></td>
      　<td><%= purchase[:price] %></td>
      　<td><%= purchase[:count] %></td>
      　<td><%= purchase[:total] %></td>
    </tr>
    <% end %>
  </table>
</div>
<h1><%= @all_total %></h1>
<form action="/invoice" method="post">
  <input class="ok-button" type="submit" value="請求書作成">
</form>